{
    "require": {
        "slim/slim": "4.*",
        "slim/psr7": "^1.1",
        "slim/http": "^1.0",
        "php-di/php-di": "^6.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "cs:check": "composer cs-fix -- --dry-run",
        "cs:fix": "php-cs-fixer fix --diff --diff-format=udiff --verbose --ansi --allow-risky=yes"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16"
    }
}
