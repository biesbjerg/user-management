{% extends 'layouts/default.twig' %}

{% block title %}Edit User{% endblock %}

{% block content %}
<h1>Edit User</h1>
<div class="card">
    <div class="card-header">Edit User</div>
    <div class="card-body">
        <form method="POST">
            <input type="hidden" name="_METHOD" value="PUT">

            <input type="hidden" class="form-control" name="id" value="{{ id|default('') }}">

            <div class="form-group row">
                <label for="name" class="col-md-4 col-form-label text-md-right">Name</label>
                <div class="col-md-6">
                    <input
                        type="text"
                        id="name"
                        class="form-control{% if validator is defined and validator.hasError('name') %} is-invalid{% endif %}"
                        name="name"
                        value="{{ name|default('') }}"
                        autocomplete="name"
                        autofocus>

                    {% if validator is defined and validator.hasError('name') %}
                        <p class="invalid-feedback">
                            {{ validator.getError('name') }}
                        </p>
                    {% endif %}
                </div>
            </div>

            <div class="form-group row">
                <label for="username" class="col-md-4 col-form-label text-md-right">Username</label>
                <div class="col-md-6">
                    <input
                        type="text"
                        id="username"
                        class="form-control{% if validator is defined and validator.hasError('username') %} is-invalid{% endif %}"
                        name="username"
                        value="{{ username|default('') }}"
                        autocomplete="username">

                    {% if validator is defined and validator.hasError('username') %}
                        <p class="invalid-feedback">
                            {{ validator.getError('username') }}
                        </p>
                    {% endif %}
                </div>
            </div>

            <div class="form-group row">
                <label for="password" class="col-md-4 col-form-label text-md-right">Password</label>
                <div class="col-md-6">
                    <input
                        type="password"
                        id="password"
                        class="form-control{% if validator is defined and validator.hasError('password') %} is-invalid{% endif %}"
                        name="password"
                        value="{{ password|default('') }}"
                        autocomplete="new-password"
                        placeholder="Leave blank to keep current password">

                    {% if validator is defined and validator.hasError('password') %}
                        <p class="invalid-feedback">
                            {{ validator.getError('password') }}
                        </p>
                    {% endif %}
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-6 offset-md-4">
                    <div class="form-check">
                        <input type="hidden" name="is_enabled" value="0">
                        <input type="checkbox" id="enabled" class="form-check-input" name="is_enabled" value="1" {% if is_enabled|default('1') %}checked{% endif %}>
                        <label class="form-check-label" for="enabled">Enabled</label>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-6 offset-md-4">
                    <button type="submit" class="btn btn-primary">
                        Submit
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
{% endblock %}
